{
  "extends": [
    "stylelint-config-prettier"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-prettier"
  ],
  "rules": {
    "prettier/prettier": true,
    "order/properties-alphabetical-order": null,
    "selector-max-id": 1,
    "selector-class-pattern": null,
    "selector-no-qualifying-type": null,
    "selector-max-compound-selectors": 8,
    "max-nesting-depth": 7
  }
}
